<div class="newform">
  <div>
      <label>Title: </label>
      <input type="text" name="title" value="<%= movie.title %>">
  </div>
  <div>
    <label>Director: </label>
    <select name="director">
    <% directors.forEach(director => { %>
      <% if (director.id === movie.director) { %>
        <option selected label="<%= director.name %>" value="<%= director.id %>">
      <% } else { %>
        <option label="<%= director.name %>" value="<%= director.id %>">
      <% } %>
    <% }) %>
    </select>
  </div>
  <div>
    <label>Lead Actor: </label>
    <select name="actor">
        <% actors.forEach(actor => { %>
        <% if (actor.id === movie.actor) { %>
            <option selected label="<%= actor.name %>" value="<%= actor.id %>">
        <% } else { %>
            <option label="<%= actor.name %>" value="<%= actor.id %>">
        <% } %>
        <% }) %>
    </select>
  </div>
  <div>
  <div>
    <label>Publish Date: </label>
    <input type="date" name="publishDate"
          value="<%= movie.publishDate == null ? '' : movie.publishDate.toISOString().split('T')[0] %>">
  </div>
  <div>
    <label>Lenght in Minutes: </label>
    <input type="number" name="minutes" min="1" value="<%= movie.minutes %>">
  </div>
  </div>
  <div>
    <label>Cover: </label>
    <input type="file" name="cover" class="filepond">
  </div>
  <div>
    <label>Description: </label>
    <textarea name="description"><%= movie.description %></textarea>
  </div>
</div>